FROM node:20-alpine

WORKDIR /app

# OpenSSLとPostgreSQLクライアントのみをインストール
RUN apk add --no-cache openssl postgresql-client

# パッケージファイルをコピー
COPY package*.json ./

# Prismaスキーマをコピー
COPY prisma ./prisma

# 依存関係をインストール（postinstallでprisma generateが実行される）
RUN npm ci

# ソースコードをコピー
COPY . .

# 開発用スタートアップスクリプトに実行権限を付与
RUN chmod +x /app/scripts/start-dev.sh

# 開発サーバーを起動
EXPOSE 3000

CMD ["sh", "/app/scripts/start-dev.sh"]
