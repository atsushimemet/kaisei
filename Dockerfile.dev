FROM node:20-alpine

WORKDIR /app

# OpenSSLとその他の必要なパッケージをインストール
RUN apk add --no-cache openssl

# パッケージファイルをコピー
COPY package*.json ./

# Prismaスキーマをコピー
COPY prisma ./prisma

# 依存関係をインストール（postinstallでprisma generateが実行される）
RUN npm ci

# ソースコードをコピー
COPY . .

# 開発サーバーを起動
EXPOSE 3000

CMD ["npm", "run", "dev"] 
